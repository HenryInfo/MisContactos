<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acme.miscontactos.CrearContactoFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/entintado_claro">

        <ImageView
            android:id="@+id/imgContacto"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/contacto"
            android:background="@color/fondo_gris"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/cmpNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textPersonName"
            android:ems="10"
            android:hint="@string/hint_cmpnombre"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgContacto"
            android:layout_toEndOf="@+id/imgContacto"
            android:layout_toLeftOf="@+id/btnGuardar"
            android:layout_toStartOf="@+id/btnGuardar" />

        <EditText
            android:id="@+id/cmpTelefono"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:hint="@string/hint_cmptelefono"
            android:layout_below="@+id/cmpNombre"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/imgContacto"
            android:layout_toEndOf="@+id/imgContacto" />

        <EditText
            android:id="@+id/cmpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="@string/hint_cmpemail"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/cmpTelefono"
            android:layout_below="@+id/cmpNombre"
            android:layout_toRightOf="@+id/cmpTelefono"
            android:layout_alignRight="@+id/cmpNombre"
            android:layout_alignEnd="@+id/cmpNombre" />

        <EditText
            android:id="@+id/cmpDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_cmptdireccion"
            android:layout_below="@+id/cmpEmail"
            android:minLines="2"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/imgContacto"
            android:layout_toEndOf="@+id/imgContacto"
            android:layout_alignBottom="@+id/imgContacto"
            android:layout_alignRight="@+id/cmpEmail"
            android:layout_alignEnd="@+id/cmpEmail"
            android:inputType="textPostalAddress" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/text_btncancelar"
            android:layout_below="@+id/btnGuardar"
            android:layout_toRightOf="@+id/cmpEmail"
            android:layout_toEndOf="@+id/cmpEmail" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/text_btnguardar"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</ScrollView>